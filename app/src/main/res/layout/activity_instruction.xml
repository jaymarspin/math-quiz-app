<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:id="@+id/backHolder4"
    tools:context=".instruction">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#747107"
        android:text="Instruction"
        android:textSize="45sp"
        android:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="439dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="#8d120b0b"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="A game that test the mathematical skills of app user is follow the instruction below to get started" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"
                android:text="Click 'play' to initiate the game"
                android:textColor="#fff"
                android:textSize="20dp" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"
                android:text="In the first textfield you need to enter your name or the name that you want to be displayed"
                android:textColor="#fff"
                android:textSize="20dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"
                android:text="The next is you'll need to choose among categories"
                android:textColor="#fff"
                android:textSize="20dp" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"
                android:text="The next is you'll have to select among level of difficulties"
                android:textColor="#fff"
                android:textSize="20dp" />



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"
                android:text="After all.. the game will start.. you need to select between four choices one of them is the correct answer you will have your lifelines such as 50/50 which will remove the two incorrect answers and the phone a friend that will give you another 60 secs to call a friend that might possibly know the answer and indeed helpful you can only use the lifelines once"
                android:textColor="#fff"
                android:textSize="20dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8d120b0b"
                android:padding="15dp"

                android:text="Thank you"
                android:textColor="#f2ff00"
                android:gravity="center"
                android:textSize="40dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>